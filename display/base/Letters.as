package display.base{	import flash.display.*;	import flash.events.*;	import a24.tween.Tween24;	public class Letters extends MovieClip	{		//Properties		//Member variable		protected var maskShapeRear:Shape;		protected var maskShapeFront:Shape;		//Constructor		public function Letters()		{			if (stage) init(null);			else addEventListener(Event.ADDED_TO_STAGE,init);		}		/**		* init		*/		public function init(ev:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE,init);		}		/**		* setup		*/		protected function setup(rear:MovieClip,front:MovieClip)		{			var contentRear:MovieClip = rear;			var contentFront:MovieClip = front;			//後ろの文字の透明度			contentRear.alpha = 0.2;			//後ろの文字のマスク			maskShapeRear = new Shape ;			maskShapeRear.graphics.beginFill(0xFFF);			maskShapeRear.graphics.drawRect(0,0,this.width,this.height);			maskShapeRear.graphics.endFill();			maskShapeRear.x = maskShapeRear.y = 0;			maskShapeRear.width = 0;			addChild(maskShapeRear);			//手前の文字の透明度			contentFront.alpha = 1;			//手前の文字のマスク			maskShapeFront = new Shape;			maskShapeFront.graphics.beginFill(0xFFF);			maskShapeFront.graphics.drawRect(0,0,this.width,this.height);			maskShapeFront.graphics.endFill();			maskShapeFront.x = maskShapeFront.y = 0;			maskShapeFront.width = 0;			addChild(maskShapeFront);			//それぞれにマスクを設定			contentRear.mask = maskShapeRear;			contentFront.mask = maskShapeFront;		}		/**		* show		*/		public function show()		{			Tween24.tween(maskShapeRear,.5,Tween24.ease.ExpoInOut).width(this.width).play();			Tween24.tween(maskShapeFront,.5,Tween24.ease.ExpoInOut).width(this.width).delay(.3).play();		}		/**		* hide		*/		public function hide()		{			Tween24.tween([maskShapeRear,maskShapeFront],.5,Tween24.ease.ExpoInOut).width(0).play();		}	}}