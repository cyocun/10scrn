package{	import flash.display.*;	import flash.events.*;	import flash.display.StageScaleMode;	import flash.display.StageAlign;	import controller.Commander;	import display.WhiteRibbon;	import display.*;	public class Main extends Sprite	{		//Properties		//Member variable		public var bg_mc:MovieClip;					//背景のmovieClip		public var title_mc:MovieClip;			//タイトルのmovieClip		public var lead_mc:MovieClip;				//本文のmovieClip		public var whiteBribbon_mc:MovieClip;	//白い帯		public var product_mc:MovieClip;		//製品画像		//public var button_mc:MovieClip;			//単体テスト用		private var _commander:Commander;		//司令塔		//Constructor		public function Main():void		{			if (stage) init(null);			else addEventListener(Event.ADDED_TO_STAGE,init);		}		/**		* init		*/		private function init(ev:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE,init);			stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.SHOW_ALL;			//Commander呼び出してステージの位置を教える。			_commander = new Commander(this);			//舞台背景			bg_mc = new BackGround;			bg_mc.x = bg_mc.y = 0;			addChild(bg_mc);			//白帯			whiteBribbon_mc = new WhiteRibbon;			whiteBribbon_mc.x = whiteBribbon_mc.y = 0;			addChild(whiteBribbon_mc);			//タイトル			title_mc = new Title;			title_mc.x = title_mc.y = 120;			addChild(title_mc);			//文章			lead_mc = new Lead;			lead_mc.x = 120;			lead_mc.y = title_mc.y + title_mc.height + 90;			addChild(lead_mc);			//製品画像			product_mc = new Product;			product_mc.x = 120;			product_mc.y = 2160 - product_mc.height;			addChild(product_mc);			//単体テスト用ボタン			//button_mc = new Button( this );			//button_mc.x = 10;			//button_mc.y = 10;			//addChild(button_mc);		}		/**		* startContent		* ワイプインアニメーションの開始と同時に実行されます。		*/		public function startContent():void		{			_commander.start();		}		/**		* endContent		* ワイプアウトアニメーションの前に実行されます。		*/		public function endContent():void		{			_commander.end();		}	}}